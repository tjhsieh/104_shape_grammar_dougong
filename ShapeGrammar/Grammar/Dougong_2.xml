<ShapeGrammar name="重栱" draw="3D">
	<shapes>
		<shape>
			<name>散枓</name>
			<symbol>SD</symbol>
			<url>./Models/SD.dae</url>
			<type>dae</type>
		</shape>
		<shape>
			<name>齊心枓</name>
			<symbol>QXD</symbol>
			<url>./Models/QXD.dae</url>
			<type>dae</type>
		</shape>
		<shape>
			<name>交互枓</name>
			<symbol>JHD</symbol>
			<url>./Models/JHD.dae</url>
			<type>dae</type>
		</shape>
    <shape>
      <name>慢栱</name>
      <symbol>MG</symbol>
      <url>./Models/MG.dae</url>
      <type>dae</type>
    </shape>
		<shape>
			<name>瓜子栱</name>
			<symbol>GJG</symbol>
			<url>./Models/GJG.dae</url>
			<type>dae</type>
		</shape>    
    <shape>
      <name>素方</name>
      <symbol>SF</symbol>
      <url>./Models/SF.dae</url>
      <type>dae</type>
    </shape>    
  </shapes>
	<symbols>	
		<symbol>
			<name>SD</name>
			<start>
				<x>0</x>
				<y>0</y>
				<z>0</z>
			</start>
			<nexts>
				<next>
					<x>0</x>
					<y>6</y>
					<z>0</z>
				</next>
			</nexts>
		</symbol>
		<symbol>
			<name>QXD</name>
			<start>
				<x>0</x>
				<y>0</y>
				<z>0</z>
			</start>
			<nexts>
				<next>
					<x>0</x>
					<y>6</y>
					<z>0</z>
				</next>
			</nexts>
		</symbol>
		<symbol>
			<name>JHD</name>
			<start>
				<x>0</x>
				<y>0</y>
				<z>0</z>
			</start>
			<nexts>
				<next>
					<x>0</x>
					<y>6</y>
					<z>0</z>
				</next>
			</nexts>
		</symbol>
    <symbol>
      <name>MG</name>
      <start>
        <x>0</x>
        <y>0</y>
        <z>0</z>
      </start>
      <nexts>
        <next>
          <x>0</x>
          <y>15</y>
          <z>0</z>
        </next>
        <next>
          <x>0</x>
          <y>15</y>
          <z>-41</z>
        </next>
        <next>
          <x>0</x>
          <y>15</y>
          <z>41</z>
        </next>
      </nexts>
    </symbol>
		<symbol>
			<name>GJG</name>
			<start>
				<x>0</x>
				<y>0</y>
				<z>0</z>
			</start>
			<nexts>
				<next>
					<x>0</x>
					<y>15</y>
					<z>0</z>
				</next>
				<next>
					<x>0</x>
					<y>15</y>
					<z>-26</z>
				</next>
				<next>
					<x>0</x>
					<y>15</y>
					<z>26</z>
				</next>
			</nexts>
		</symbol>
    <symbol>
      <name>SF</name>
      <start>
        <x>0</x>
        <y>0</y>
        <z>0</z>
      </start>
    </symbol>
  </symbols>
	<rules>
		<rule>
			<description>由空間原點放入交互枓</description>
			<from></from>
			<to>@[0|90|0]JHD</to>
		</rule>
		<rule>
			<description>從交互枓插入瓜子栱</description>
			<from>@[0|90|0]JHD</from>
			<to>@[0|90|0]JHD=GJG(*,*)</to>
		</rule>
    <rule>
      <description>從瓜子栱插入齊心枓</description>
      <from>GJG(*,*)</from>
      <to>GJG(*,*)=@[0|90|0]QXD</to>
    </rule>    
		<rule>
			<description>從瓜子栱插入散枓(左)</description>
			<from>GJG(*,*)</from>
			<to>GJG(@[0|90|0]SD,*)</to>
		</rule>
		<rule>
			<description>從瓜子栱插入散枓(右)</description>
			<from>GJG(*,*)</from>
			<to>GJG(*,@[0|90|0]SD)</to>
		</rule>
    <rule>
      <description>從齊心枓插入慢栱</description>
      <from>GJG(*,*)=@[0|90|0]QXD</from>
      <to>GJG(*,*)=@[0|90|0]QXD=MG(*,*)</to>
    </rule>
    <rule>
      <description>從慢栱插入散枓(左)</description>
      <from>MG(*,*)</from>
      <to>MG(@[0|90|0]SD,*)</to>
    </rule>
    <rule>
      <description>從慢栱插入散枓(右)</description>
      <from>MG(*,*)</from>
      <to>MG(*,@[0|90|0]SD)</to>
    </rule>
    <rule>
      <description>從慢栱插入齊心枓</description>
      <from>MG(*,*)</from>
      <to>MG(*,*)=@[0|90|0]QXD</to>
    </rule>    
    <rule>
      <description>從齊心枓插入素方</description>
      <from>MG(*,*)=@[0|90|0]QXD</from>
      <to>MG(*,*)=@[0|90|0]QXD=SF</to>
    </rule>    
  </rules>
	<initial></initial>
  <products>
    <product>
      <name>重栱</name>
      <description>05-2 重栱</description>
      <url>./Models/Product/Dougong_2.dae</url>
      <grammar>JHD=GJG(SD,SD)=QXD=MG(SD,SD)=QXD=SF</grammar>
    </product>
  </products>
</ShapeGrammar>

